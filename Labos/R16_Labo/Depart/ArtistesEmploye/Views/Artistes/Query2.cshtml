<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Specialite)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prenom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NoTel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Courriel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateEmbauche)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Specialite)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Prenom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NoTel)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Courriel)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateEmbauche)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ArtisteId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ArtisteId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ArtisteId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
